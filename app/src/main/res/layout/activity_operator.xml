<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/activity_operator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.will.custom_rxandroid.ui.some_operator.OperatorActivity">

        <Button
            android:id="@+id/just"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="just" />

        <Button
            android:id="@+id/from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="from" />

        <Button
            android:id="@+id/defer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="defer" />

        <Button
            android:id="@+id/inteveal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="inteveal" />

        <Button
            android:id="@+id/repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="repeat" />

        <Button
            android:id="@+id/repeat_when"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="repeat_when" />

        <Button
            android:id="@+id/buffer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="buffer" />

        <Button
            android:id="@+id/flatmap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="flatmap" />

        <Button
            android:id="@+id/group_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="group_by" />

        <Button
            android:id="@+id/map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="map" />

        <Button
            android:id="@+id/scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="scan" />

        <Button
            android:id="@+id/window"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="window" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="以下为过滤操作符"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/debounce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="debounce" />

        <Button
            android:id="@+id/distinct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="distinct" />

        <Button
            android:id="@+id/elementat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="element at" />

        <Button
            android:id="@+id/filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="filter" />

        <Button
            android:id="@+id/oftype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="of type" />

        <Button
            android:id="@+id/first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="first" />
    </LinearLayout>
</ScrollView>
