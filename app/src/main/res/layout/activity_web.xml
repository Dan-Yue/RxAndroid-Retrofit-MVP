<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_web"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_like"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:scaleType="centerInside"
            android:src="@mipmap/like" />

        <TextView
            android:id="@+id/tv_like_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@+id/img_like"
            android:gravity="center_vertical"
            android:text="123"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_report_webactivity"
            android:layout_width="wrap_content"
            android:layout_height="16sp"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"
            android:layout_toLeftOf="@+id/tv_report_webactivity"
            android:scaleType="centerInside"
            android:src="@mipmap/report" />

        <TextView
            android:id="@+id/tv_report_webactivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:text="रिपोर्ट कर"
            android:layout_alignBottom="@+id/iv_report_webactivity"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp" />

    </RelativeLayout>
</RelativeLayout>
